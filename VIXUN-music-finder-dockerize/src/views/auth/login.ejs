<% layout("boilerplate") %>
<% block("stylesheets").append(`
<link rel="stylesheet" href="/auth/styles/form.css">
<link rel="stylesheet" href="/auth/styles/validation.css">
`) %>

<main id="form-auth">
    <h2>Login</h2>
    <form action="/auth/login" method="post">
        <!-- TODO how to check for either username/email in server? -->
        <label for="username">Username/E-mail</label>
        <input type="text" name="username" id="username" required>
        <label for="password">Password</label>
        <input type="password" name="password" id="password" required>

        <footer>
            <a href="/auth/register">Register</a>
            <button type="submit">Login</button>
        </footer>
    </form>
</main>

<% block("scripts").append(`
<script src="https://unpkg.com/just-validate@latest/dist/just-validate.production.min.js"></script>
<script src="/auth/scripts/validation-login.js" type="module"></script>
`) %>
