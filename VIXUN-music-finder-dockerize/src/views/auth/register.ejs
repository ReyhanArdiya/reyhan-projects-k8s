<% layout("boilerplate") %>
<% block("stylesheets").append(`
<link rel="stylesheet" href="/auth/styles/form.css">
<link rel="stylesheet" href="/auth/styles/validation.css">
`) %>

<main id="form-auth">
    <h2>Register</h2>
    <form action="/auth/register" method="post">
        <label for="username">Username</label>
        <input type="text" name="username" id="username" required>
        <label for="email">E-mail</label>
        <input type="email" name="email" id="email" required>
        <label for="password">Password</label>
        <input type="password" name="password" id="password" required>
        <footer>
            <a href="/auth/login">Cancel</a>
            <button type="submit">Submit</button>
        </footer>
    </form>
</main>

<% block("scripts").append(`
<script src="https://unpkg.com/just-validate@latest/dist/just-validate.production.min.js"></script>
<script src="/auth/scripts/validation-register.js" type="module"></script>`
) %>
